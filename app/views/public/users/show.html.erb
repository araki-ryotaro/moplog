<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">会員ページ</h2>
  <div class='row mt-5'>
    <div class='col-4'>
      <table class="table">
        <thead>
          <tr>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <% if @user.name != "ゲストユーザー" %>
        <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-sm btn-info col mx-auto" %>
      <% end %>
    </div>
    <div class="col-8">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>タイトル</th>
            <th>動画説明</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.description %></td>
            <td><%= link_to post.genre.name, genre_path(post.genre.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>