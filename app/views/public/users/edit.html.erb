<div class='container pt-5'>
  <div class="card pt-5 pl-5 pr-5 pb-5">
    <h2>ユーザー編集</h2>
    <div class='row mt-5'>
      <div class='col-6 mx-auto'>
        <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: :true do |f| %>
          <table class="table">
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, class: "form-control" %></td>
            </tr>
          </table>
          <%= f.submit "変更", class: "mt-3 col mx-auto btn btn-sm btn-info" %>
        <% end %>
        <%= link_to "退会", unsubscribe_path, class: "mt-3 col mx-auto btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
</div>