<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">ユーザー一覧</h2>
  <div class='row mt-5'>
    <div class='col-8 mx-auto'>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>投稿数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= user.id %></th>
            <th><%= link_to user.name, user_path(user.id) %></th>
            <th><%= user.post.count %>投稿</th>
            <th>
              <% if current_user.name != "ゲストユーザー" %>
                <% if user.name != "ゲストユーザー" %>
                  <% if user.id != current_user.id %>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-danger" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div  class="mx-auto" style="width: 200px;">
    <%= paginate @users %>
  </div>
</div>
