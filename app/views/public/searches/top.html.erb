<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">[<%= @word %>]一覧</h2>
  <!--検索対象モデルが投稿者の時 -->
  <% if @range == "投稿者" %>
    <h4 class="mt-3">全<%= @users.count %>件</h4>
    <div class='row mt-5'>
      <div class='col-8 mx-auto'>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>ニックネーム</th>
              <th>投稿数</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user_path(user.id) %></td>
              <td><%= user.post.count %>投稿</td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <% else %>
  <!--検索対象モデルがUserではない時(= 検索対象モデルがタイトルの時) -->
    <h4 class="mt-3">全<%= @posts.count %>件</h4>
    <div class='row mt-5'>
      <div class='col mx-auto'>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>投稿者</th>
              <th>タイトル</th>
              <th>動画説明</th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <th><%= link_to post.user.name, user_path(post.user.id) %></th>
              <th><%= link_to post.title, post %></th>
              <th><%= post.description %></th>
              <th><%= link_to post.genre.name, genre_path(post.genre.id) %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>