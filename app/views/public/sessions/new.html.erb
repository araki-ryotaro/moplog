<div class='container pt-5'>
  <div class='row mt-5'>
    <div class='col-8 mx-auto mt-5'>
      <div class="card pt-5 pl-5 pr-5 pb-5">
      <h2>ログイン</h2>

      <%= alert %>
      <%= flash[:notice] %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-3">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "sample@gmail.com", autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mt-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, placeholder: "6文字以上入力", autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-info form-control" %>
        </div>
      <% end %>

        <div class="actions mt-3 mb-3">
          <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-block", method: :post %>
        </div>
      </div>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>