<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">新規投稿</h2>
  <div class='row'>
    <div class='col-6 mx-auto'>
      <div class="mt-5">
        <%= form_with model: @post, local: true do |f| %>
          <p class="mt-3">題名</p>
          <%= f.text_field :title %><br>
          <p class="mt-3">説明</p>
          <%= f.text_area :description %><br>
          <p class="mt-3">ジャンル</p>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %>
          <p class="mt-3">動画</p>
          <%= f.file_field :video %><br>
          <%= f.submit "投稿する", class: "mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>