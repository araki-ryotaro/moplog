<div class='container pt-5'>
  <div class="card pt-5 pl-5 pr-5 pb-5">
    <h2>新規投稿</h2>
    <div class='row mt-5'>
      <div class='col-6 mx-auto'>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @post, local: true do |f| %>
        <table class="table">
          <tr>
            <td>タイトル</td>
            <td><%= f.text_field :title, placeholder: "タイトルを入力", class: "form-control" %></td>
          </tr>
          <tr>
            <td>動画説明</td>
            <td><%= f.text_area :description, placeholder: "動画の説明を入力", class: "form-control" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %></td>
          </tr>
          <tr>
            <td>投稿動画</td>
            <td><%= f.file_field :video %></td>
          </tr>
        </table>
        <%= f.submit "投稿", class: "mt-3 col mx-auto btn btn-sm btn-info" %>
      <% end %>
      </div>
    </div>
  </div>
</div>