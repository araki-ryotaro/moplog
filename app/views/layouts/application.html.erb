<!DOCTYPE html>
<html>
  <head>
    <title>Moplog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
        <%= link_to "Moplog", root_path, class: 'nav-link text-light' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "マイページ", users_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item active">
              <%= link_to "新規投稿", new_post_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規投稿", new_post_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "投稿一覧", posts_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
            <%= link_to "投稿一覧", admin_posts_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "会員一覧", admin_users_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
          <% else %>
            <li class="nav-item">
            <%=  link_to "管理者用ログイン", new_admin_session_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-light'%>
            </li>
            <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light' %>
            </li>
          <% end %>
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, options_for_select([['User'], ['Post']]) %>
            <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
            <%= f.submit "検索" %>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
