<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">ジャンル編集</h2>
  <div class='row mt-5'>
    <div class='col-6 mx-auto'>
      <%= form_with model: @genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>
      <table class="table">
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
        </tr>
      </table>
      <%= f.submit '変更', class: "mt-3 col mx-auto btn btn-sm btn-info" %>
      <% end %>
    </div>
  </div>
</div>
