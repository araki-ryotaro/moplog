<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">ジャンル一覧</h2>
  <div class='row mt-5'>
    <div class='col-6 mx-auto'>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table>
          <thead>
            <tr>
              <th>新規ジャンル登録</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.text_field :name, placeholder: "ジャンル名を入力", class: "form-control mt-3" %></td>
              <td><%= f.submit '登録', class: "ml-5 mt-3 btn btn-sm btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class='row mt-5'>
    <div class='col-6 mx-auto'>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-sm btn-info" %></td>
        </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>