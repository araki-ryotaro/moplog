<% if @post.video.attached? %>
  <p><%= @post.title %></p><br>
  <p><%= @post.description %></p>
  <p><%= @post.genre.name %></p>
  <video src="<%= rails_blob_path(@post.video) %>" type="video/mp4" controls></video>
<% end %>

<p>コメント件数:<%=@post.post_comments.count %></p>
<% @post.post_comments.each do |post_comment| %>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime("%Y/%m/%d")%><%= post_comment.comment %>
  <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete %>
<% end %>

<%= link_to "一覧ページへ", admin_posts_path %>
<%= link_to "削除する", admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<%= link_to "編集ページへ", edit_admin_post_path(@post.id) %>