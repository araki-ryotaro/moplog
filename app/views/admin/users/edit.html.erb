<div class='container pt-5'>
  <div class="card pt-5 pl-5 pr-5 pb-5">
    <h2>ユーザー編集</h2>
    <div class='row mt-5'>
      <div class='col-6 mx-auto'>
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local: :true do |f| %>
          <table class="table">
            <tr>
              <td>ユーザー名</td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, false %>有効
                <%= f.radio_button :is_deleted, true %>退会
              </td>
            </tr>
          </table>
          <%= f.submit "変更", class: "mt-3 col mx-auto btn btn-sm btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
</div>