<div class='container mt-5'>
  <h2 style="background-color:black;color:dark;display:inline" class="bg-light text-dark">会員ページ</h2>
  <div class='row mt-5'>
    <div class='col-5'>
      <table class="table">
        <thead>
          <tr>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th>いいね</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
            <td>
              <% if @user.is_deleted == false %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
            </td>
            <td><%=link_to @user.favorites.count,favorites_admin_user_path(@user) %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-sm btn-info col mx-auto" %>
    </div>
    <div class="col-7">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>タイトル</th>
            <th>動画説明</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, admin_post_path(post.id) %></td>
            <td><%= post.description %></td>
            <td><%= link_to post.genre.name, admin_genre_path(post.genre.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>